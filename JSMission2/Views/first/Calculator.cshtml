    <input type="text" class="form-control" placeholder="Enter Here" id="groupproject" asp-for="GroupProject" /><br />
    <label>Quizzes:</label>
    <input type="text" class="form-control" placeholder="Enter Here" id="quizzes" asp-for="Quizzes" /><br />
    <label>Exams:</label>
    <input type="text" class="form-control" placeholder="Enter Here" id="exams" asp-for="Exams" /><br />
    <label>INTEX:</label>
